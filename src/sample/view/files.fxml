<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.FilesController">
    <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="321.0" prefWidth="608.0"
                AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <VBox prefHeight="292.0" prefWidth="608.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Text layoutX="378.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Выбор файлов для сортировки">
                <font>
                    <Font size="15.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Text>
            <TableView fx:id="tvFiles" editable="true" prefHeight="242.0" prefWidth="596.0"
                       VBox.vgrow="SOMETIMES">
                <columns>
                    <TableColumn fx:id="select" maxWidth="150.0" minWidth="84.0"
                                 prefWidth="84.0" sortable="false">
                        <graphic>
                            <CheckBox fx:id="cbAllFiles" mnemonicParsing="false"
                                      onAction="#chooseAllFiles" selected="true"/>
                        </graphic>
                    </TableColumn>
                    <TableColumn fx:id="fileName" prefWidth="510.0" text="Название файла"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </AnchorPane>
    <Button mnemonicParsing="false" onAction="#addFiles" prefHeight="25.0"
            prefWidth="105.0" text="Добавить" AnchorPane.bottomAnchor="40.0"
            AnchorPane.leftAnchor="100.0"/>
    <Button mnemonicParsing="false" onAction="#sortFiles" prefHeight="25.0"
            prefWidth="105.0" text="Сортировка" AnchorPane.bottomAnchor="40.0"
            AnchorPane.rightAnchor="100.0"/>
    <Button layoutX="268.0" layoutY="336.0" mnemonicParsing="false" onAction="#deleteFiles"
            prefHeight="25.0" prefWidth="105.0" text="Удалить всё" AnchorPane.bottomAnchor="40.0"/>
</AnchorPane>